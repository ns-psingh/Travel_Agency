<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.premal2.travelagency.admin">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="Welcome Administrator! You can manage enquiries, accounts, and other settings from here. Please do not disclose administrator crednetials to any unauthorised user." />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="33dp"
        android:background="?attr/colorPrimary"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Manage Enquiries"
        android:layout_below="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_input_get" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignTop="@+id/textView14"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Accounts" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignEnd="@+id/textView14"
        android:layout_alignRight="@+id/textView14"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="13dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/ic_menu_manage" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="250px"
        android:layout_height="250px"
        android:background="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_lock_power_off"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/imageButton3"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="17dp"
        android:text="Settings" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignTop="@+id/textView17"
        android:text="Logout" />

</RelativeLayout>
